#CC=gcc-3.2 -Wall

#MySQL paths
INC+=-I/usr/include/mysql
LIB+=-L/usr/lib

#NET-SNMP
DEF+=-DNETSNMP
INC+=-I/usr/include/net-snmp
LIB+=-L/usr/lib

#UCD-SNMP
#DEF+=-DUCDSNMP
#INC+=-I/usr/include/ucd-snmp
#LIB+=-L/usr/lib

#RRD path
#Comment out if you want to use external rrdtool
#INC+=-I/usr/include
#LIB+=-L/usr/lib
#DEF+=-DRRD

#PThread path
INC+=-I/usr/include
LIB+=-L/usr/lib

LIB+=-lmysqlclient -lrrd -lpthread -lsnmp

OBJS=snmp.o poller.o targets.o util.o conf.o main.o rrd.o

all: cactid

cactid: $(OBJS)
	$(CC) $(OBJS) -o cactid $(LIB) 

clean:
	rm -f $(OBJS) cactid

.c.o:
	$(CC) -c $< -o $@ $(DEF) $(INC)
	
