include_once("database.php");
if ($do_not_read_config != true) {
    if (isset($config) == false) {
		/* make a connection to the database */
		$config_res = db_fetch_assoc("select * from settings");
		$rows_config_only = sizeof($config_res);
		
		if ($rows_config_only > 0) {
		    foreach ($config_res as $row) {
				$name_config_only = $row[Name];
				$config[$name_config_only][value] = $row[Value];
				$config[$name_config_only][friendlyname] = $row[FriendlyName];
				$config[$name_config_only][description] = $row[Description];
		    }
		}
		
		/* built-in snmp support */
		$config["php_snmp_support"] = function_exists("snmpget");
    }
}

/* make sure this variable reflects your operating system type: 'unix' or 'win32' */
$config[cacti_server_os] = "unix";

/* reset this variable */
$do_not_read_config = false;

/* -- you probably will not need to change anything below this line! -- */

/* colors */
$colors[dark_outline] = "454E53";
